<p id="notice"><%= notice %></p>


<h2>Lista de Tareas de <%= current_user.name %></h2>


<div class="row">
  <% @tasks.each do |task| %>
    <div class="col-sm-4">
      <div class="card">
          <%= image_tag task.photo, class: "card-img-top" %>

      <div class="body">

        <%=task.name  %>
        <p><%=task.details %></p>
        <p><%= link_to 'Show', task, class: "btn btn-secondary" %>
        <%= link_to 'Edit', edit_task_path(task), class: "btn btn-warning" %>
        <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"%>

        </p>

      </div>

      </div>
    </div>
  <%end %>
</div>

<%= link_to 'New Task', new_task_path, class:"btn btn-info" %>
